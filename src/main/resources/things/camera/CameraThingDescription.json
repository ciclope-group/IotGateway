{
  "type": "Thing",
  "name": "camera",
  "base": "http://wotgate.om.fi.upm.es/things/camera/",
  "interactions": [
    {
      "id": "state",
      "type": "Property",
      "name": "state",
      "outputData": {
        "valueType": {
          "type": "object",
          "properties": {
            "operatingStatus": {
              "enum": ["OK", "WORKING", "ERROR", "UNKNOWN"]
            },
            "timestamp": {
              "type": "string"
            }
          }
        }
      },
      "writable": false,
      "links": [{
        "href" : "state",
        "mediaType": "application/json"
      }]
    },
    {
      "id": "images",
      "type": "Property",
      "name": "images",
      "roleBasedAccessControl": "Authenticated",
      "outputData": {
        "valueType": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "url": {
                "type": "string"
              },
              "userName": {
                "type": "string"
              },
              "dateCreated": {
                "type": "string"
              },
              "dateModified": {
                "type": "string"
              }
            }
          },
          "minItems": 0
        }
      },
      "writable": false,
      "links": [{
        "href" : "images",
        "mediaType": "application/json"
      }]
    },
    {
      "type": "Action",
      "name": "captureImage",
      "roleBasedAccessControl": "Authenticated",
      "inputData": {
        "valueType": {
          "type": "object",
          "properties": {
            "exposureTime": {
              "type": "integer"
            },
            "brightness": {
              "type": "integer"
            },
            "gain": {
              "type": "integer"
            },
            "quality": {
              "type": "integer"
            }
          }
        }
      },
      "links": [{
        "href" : "captureImage",
        "mediaType": "application/json"
      }]
    }
  ]
}
